{
  "name": "react-esbuild-template",
  "version": "1.0.0",
  "description": "Opinionated React Template powered by ESBuild.",
  "main": "src/index.tsx",
  "scripts": {
    "watch": "node esbuild.config.js",
    "build": "esbuild src/index.tsx --bundle --minify --outfile=public/dist/bundle.js",
    "start": "lite-server",
    "lint": "eslint src/**/*.{ts,tsx}",
    "test": "jest",
    "watch:tw": "tailwindcss -i ./src/index.css -o ./public/dist/tailwind.css --watch",
    "build:tw": "tailwindcss -i ./src/index.css -o ./public/dist/tailwind.css --minify",
    "format": "prettier --write .",
    "purge": "node scripts/purgeDist.js ./public/dist",
    "dev": "concurrently --kill-others \"pnpm watch\" \"pnpm watch:tw\" \"pnpm start\""
  },
  "keywords": [
    "react",
    "esbuild",
    "eslint",
    "jest",
    "typescript",
    "tailwindcss",
    "framer-motion",
    "github-workflows",
    "i18next"
  ],
  "author": "shaun",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/react-router-dom": "^5.3.3",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.42.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.15.12",
    "esbuild-plugin-inline-image": "^0.0.8",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.31.10",
    "http-server": "^14.1.1",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "lite-server": "^2.6.1",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "react-test-renderer": "^18.2.0",
    "tailwindcss": "^3.2.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "framer-motion": "^7.6.7",
    "i18next": "^22.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.0.0",
    "react-router-dom": "^6.4.3"
  }
}
